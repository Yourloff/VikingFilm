<h1 class="text-5xl font-bold mb-4">Статьи</h1>

<% if @articles.count.zero? %>
  <p>Записи отсутствуют</p>
<% else %>
  <table class="min-w-full">
    <thead>
    <tr>
      <th class="py-2">Название</th>
      <th class="py-2"></th>
    </tr>
    </thead>
    <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td class="py-2"><%= link_to article.title, article %></td>
        <td class="py-2">
          <%= link_to "Редактировать", edit_article_path(article), class: "text-blue-500 hover:text-blue-700 font-semibold mr-2" %>
          <%= link_to "Удалить", article, data: { confirm: "Вы уверены?", "turbo-method": :delete }, class: "text-red-500 hover:text-red-700 font-semibold" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to "Добавить статью", new_article_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline mt-4 inline-block" %>

<%= link_to 'На главную', root_path, class: 'block mt-5' %>
