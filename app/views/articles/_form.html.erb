<%= form_with(model: article, local: true, html: { multipart: true }) do |form| %>
  <div class="max-w-md mx-auto mt-8 space-y-6">
    <div class="mb-4">
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "mt-1 p-2 border rounded-md w-full focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <% if article.try(:poster).present? %>
      <%= image_tag article.poster.url, class: 'w-1/2' %>
    <% end %>

    <div class="mb-4">
      <%= form.label :poster, class: "block text-sm font-medium text-gray-700" %>
      <%= form.file_field :poster, class: "mt-1 p-2 border rounded-md w-full focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="field">
      <%= form.label :photos, 'Загрузить фото' %>
      <%= form.file_field :photos, multiple: true %>
    </div>

    <div class="mb-4">
      <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :content, class: "mt-1 p-2 border rounded-md w-full focus:outline-none focus:ring focus:border-blue-300" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Создать", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
<% end %>
